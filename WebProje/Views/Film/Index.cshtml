@model List<Film>

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1>Filmler</h1>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Film Adı</th>
                <th>Türü</th>
                <th>Açıklaması</th>
                <th>Yönetmeni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model)
            {
                <tr>
                    <td align="center" valign="middle">
                        <img src="@film.PosterUrl" 
                             style="border-radius: 7px; border: 1px solid; max-width: 145px; max:275px;" />
                    </td>
                    <td>@film.FilmAdi</td>
                    <td>@film.FilmTuru.TurAdi</td>
                    <td>@film.Aciklama</td>
                    <td>@film.Yonetmen</td>
                    <td>
                        <a asp-controller="Film"
                           asp-action="FilmEkleGuncelle"
                           asp-route-id="@film.FilmID"
                           class="btn btn-warning">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Film"
                           asp-action="FilmSil"
                           asp-route-id="@film.FilmID"
                           class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <a asp-controller="Film"
           asp-action="FilmEkleGuncelle"
           class="btn btn-lg btn-primary">
            Yeni Film Ekle
        </a>
    </div>
</div>
